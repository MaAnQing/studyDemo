<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.madroid.studydemo" >


    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat.Light" >
        
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.RippleBackgroundActivity"
            android:label="@string/title_activity_ripple_background" >
        </activity>
        <activity
            android:name=".ui.rippleActivity"
            android:label="@string/title_activity_ripple" >
        </activity>
        <activity
            android:name=".ui.SurfaceViewActivity"
            android:label="@string/title_activity_surface_view" >
        </activity>
        <activity
            android:name=".ui.StikkyHeaderActivity"
            android:label="@string/title_activity_stikky_header" >
        </activity>
        <activity
            android:name=".ui.ScrollViewActivity"
            android:label="@string/title_activity_scroll_view" >
        </activity>
        <activity
            android:name=".ui.RecyclerViewActivity"
            android:label="@string/title_activity_recycler_view" >
        </activity>
        <activity
            android:name=".ui.BaseActivity"
            android:label="@string/title_activity_base" >
        </activity>
        <activity
            android:name=".mvp.view.WeatherActivity"
            android:label="@string/title_activity_weather" >
        </activity>
    </application>

</manifest>
